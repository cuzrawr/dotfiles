#  systemctl enable --now fstrim.timer
#
# examples:
#
UUID=<<UUUUUUUUUUUUUUUUIIIIIIIIDDDDDD>>	/              ext4   data=writeback,noauto_da_alloc,nodiscard,nobh,barrier=0,lazytime,commit=120,errors=remount-ro 0 1
